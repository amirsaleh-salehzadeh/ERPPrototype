{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "IdentityService": {
    "RestUrl": "http://localhost:5007",
    "GrpcUrl": "http://localhost:5007"
  },
  "ReverseProxy": {
    "Routes": {
      "weather-route": {
        "ClusterId": "weather-cluster",
        "Match": {
          "Path": "/api/weather/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/{**catch-all}"
          }
        ]
      },
      "docs-route": {
        "ClusterId": "docs-cluster",
        "Match": {
          "Path": "/api/docs/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/{**catch-all}"
          }
        ]
      }

    },
    "Clusters": {
      "weather-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5001/"
          }
        }
      },
      "docs-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5002/"
          }
        }
      }
    }
  },
  "RsaEncryption": {
    "EnableRsaEncryption": true,
    "KeySize": 2048,
    "GatewayPrivateKey": "",
    "ServicePublicKeys": {
      "identity": "",
      "weather": "",
      "customer": "",
      "inventory": "",
      "finance": "",
      "orders": ""
    }
  }
}
